<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Transparent">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Translucent" parent="Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomRowHeader" parent="Widget.Leanback.Row.Header">
        <!--<item name="android:maxWidth">150dp</item>-->
    </style>
    <style name="CustomHeader" parent="Widget.Leanback.Header">
        <item name="android:maxLines">@null</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.Leanback.Browse">
        <item name="browseRowsMarginTop">56dp</item>
    </style>

</resources>