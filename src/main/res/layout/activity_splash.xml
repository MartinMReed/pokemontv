<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:id="@+id/splash_pokeball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/rotating_pokeball"
        android:indeterminateDuration="2000"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/splash_pikachu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/pkmn_splash_pikachu" />

    <TextView
        android:id="@+id/splash_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:textColor="#ff747474"
        android:textSize="11sp" />

</FrameLayout>